# JFrog Jira Workflow Tools Configuration
# Copy this file to .env and fill in your actual values

# Required: Jira instance URL
JIRA_BASE_URL=https://jfrog-int.atlassian.net

# Required: Base64 encoded authentication token
# Format: base64(your.email@jfrog.com:your_api_token)
# Get API token from: Jira → Profile → Account settings → Security → API tokens
JIRA_AUTH_TOKEN=your_base64_encoded_token_here

# Optional: Default project for commands
DEFAULT_PROJECT=RTDEV

# Optional: Default team (uses project default if not specified)
# DEFAULT_TEAM=dev-artifactory-lifecycle

# Optional: Default priority for epics
# DEFAULT_PRIORITY=4 - Normal

# Optional: Default commitment level
# DEFAULT_COMMITMENT=Soft Commitment

# Optional: Default product manager
# DEFAULT_PRODUCT_MANAGER=Yonatan Philip

# Optional: Default product backlog
# DEFAULT_PRODUCT_BACKLOG=Q4-25-Backlog

# Optional: Enable debug mode
# DEBUG=false
